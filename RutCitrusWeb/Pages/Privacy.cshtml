@page
@model PrivacyModel
@{
    ViewData["Title"] = "隐私政策";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <p class="mb-4">RutCitrus 隶属于个人"psoloi" 更多信息请访问 QQ:766730056</p>

    <div class="document-container">
        <div class="document-header">
            <div class="header-left">
                <i class="fas fa-file-pdf"></i>
                RutCitrus 文档
            </div>
            <div class="header-actions">
                <button class="fullscreen-btn" onclick="toggleFullscreen()">
                    <i class="fas fa-expand"></i>
                    全屏
                </button>
            </div>
        </div>
        <div class="document-content" id="documentContent">
            <object
                data="~/docs/RutCitrus文档.pdf"
                type="application/pdf"
                class="doc-frame"
                id="pdfViewer">
                <div class="pdf-fallback">
                    <p>您的浏览器不支持 PDF 预览，请 <a href="~/docs/RutCitrus文档.pdf" download>下载文档</a> 查看。</p>
                </div>
            </object>
        </div>
    </div>
</div>

<style>
    .document-container {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
        border: 1px solid #e0e0e0;
        overflow: hidden;
    }

    .document-header {
        background: #f8f9fa;
        padding: 16px 24px;
        border-bottom: 1px solid #e0e0e0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .header-left {
        display: flex;
        align-items: center;
        gap: 12px;
        color: #1a1a1a;
        font-weight: 500;
    }

    .fullscreen-btn {
        background: #0078D4;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .fullscreen-btn:hover {
        background: #006cbd;
    }

    .document-content {
        height: 800px;
        background: #fff;
    }

    .doc-frame {
        width: 100%;
        height: 100%;
        border: none;
    }

    .pdf-fallback {
        padding: 2rem;
        text-align: center;
        color: #333;
    }

    .pdf-fallback a {
        color: #0078D4;
        text-decoration: none;
    }

    .pdf-fallback a:hover {
        text-decoration: underline;
    }

    .document-container.fullscreen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 9999;
        margin: 0;
        border-radius: 0;
    }

    .document-container.fullscreen .document-content {
        height: calc(100vh - 56px);
    }
</style>

<script>
    function toggleFullscreen() {
        const container = document.querySelector('.document-container');
        const button = document.querySelector('.fullscreen-btn i');
        
        if (!container.classList.contains('fullscreen')) {
            container.classList.add('fullscreen');
            button.classList.remove('fa-expand');
            button.classList.add('fa-compress');
        } else {
            container.classList.remove('fullscreen');
            button.classList.remove('fa-compress');
            button.classList.add('fa-expand');
        }
    }

    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            const container = document.querySelector('.document-container');
            const button = document.querySelector('.fullscreen-btn i');
            if (container.classList.contains('fullscreen')) {
                container.classList.remove('fullscreen');
                button.classList.remove('fa-compress');
                button.classList.add('fa-expand');
            }
        }
    });
</script>
