<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RutCitrus</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico?v=2" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico?v=2" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png?v=2" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png?v=2" />
    <meta http-equiv="cache-control" content="no-cache, must-revalidate, post-check=0, pre-check=0" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RutCitrusWeb.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #ffffff;
        }

        .navbar {
            background-color: #f8f9fa !important;
            border-bottom: 1px solid #dee2e6 !important;
            padding: 0 1rem !important;
            min-height: 48px;
        }

        .navbar-light .navbar-brand,
        .navbar-light .navbar-nav .nav-link {
            color: #2b2d30 !important;
        }

        .navbar-light .navbar-brand:hover,
        .navbar-light .navbar-nav .nav-link:hover {
            color: #0078D4 !important;
        }

        .footer {
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6 !important;
            color: #6c757d !important;
        }

        .footer a {
            color: #6c757d !important;
        }

        .footer a:hover {
            color: #0078D4 !important;
            text-decoration: none;
        }

        /* 下拉菜单样式 */
        .dropdown-menu {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            margin-top: 0.5rem;
        }

        .dropdown-item {
            color: #2b2d30 !important;
            padding: 0.5rem 1.5rem;
        }

        .dropdown-item:hover {
            background-color: #f8f9fa !important;
        }

        /* 激活状态的导航项 */
        .navbar-nav .nav-item.active .nav-link {
            color: #0078D4 !important;
        }

        .brand-item {
            margin-right: 2rem;
        }

        .brand-item .nav-link {
            padding: 0 !important;
            font-size: 1.25rem;
        }

        .gradient-brand {
            display: flex;
            align-items: center;
            background: linear-gradient(90deg, #FF8008, #FFC837, #4ECDC4);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }

        .brand-icon {
            width: 24px;
            height: 24px;
            margin-right: 8px;
            object-fit: contain;
        }

        .navbar-nav {
            align-items: center;
        }

        .navbar-nav .nav-link {
            padding: 0.5rem 1rem !important;
            line-height: 1.5;
        }

        @@media (max-width: 576px) {
            .brand-item {
                margin-right: 0;
                margin-bottom: 0.5rem;
            }
        }
    </style>
    <script>
        window.addEventListener('error', function(e) {
            if (e.target.tagName === 'LINK' || e.target.tagName === 'SCRIPT') {
                console.error('Resource failed to load:', e.target.src || e.target.href);
                // 尝试从备用CDN加载
                if (e.target.getAttribute('data-fallback')) {
                    e.target.href = e.target.getAttribute('data-fallback');
                }
            }
        }, true);
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item brand-item">
                            <a class="nav-link gradient-brand" asp-area="" asp-page="/Index">
                                <img src="~/favicon.ico" alt="Logo" class="brand-icon" />
                                RutCitrus
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">主页</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Server">服务</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Games">游戏</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Project">项目</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                文档
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/Docs/RCSDKGuide">RCSDK 使用指南</a></li>
                                <li><a class="dropdown-item" href="/Docs/RCSDKExtension">RCSDK 扩展开发</a></li>
                                <li><a class="dropdown-item" href="/Docs/RCSDKLibrary">RCSDK 接口文档</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Other">其他</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Help">帮助&关于</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">隐私政策</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                &copy; 2024 - RutCitrus - <a asp-area="" asp-page="/Privacy">隐私政策</a>
            </div>
            <div class="version-text">版本 1.0.1</div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 检查 Bootstrap 是否正确加载
            if (typeof bootstrap === 'undefined') {
                console.error('Bootstrap failed to load');
                // 尝试重新加载 Bootstrap
                var script = document.createElement('script');
                script.src = 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js';
                document.head.appendChild(script);
            }
            
            // 检查 jQuery 是否正确加载
            if (typeof jQuery === 'undefined') {
                console.error('jQuery failed to load');
                // 尝试重新加载 jQuery
                var script = document.createElement('script');
                script.src = 'https://code.jquery.com/jquery-3.7.1.min.js';
                document.head.appendChild(script);
            }
            
            // 检查页面布局
            setTimeout(function() {
                var containers = document.querySelectorAll('.container, .container-fluid');
                containers.forEach(function(container) {
                    if (getComputedStyle(container).display !== 'block') {
                        console.error('Container layout issue detected');
                        container.style.display = 'block';
                    }
                });
            }, 500);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var path = window.location.pathname;
            var navLinks = document.querySelectorAll('.navbar-nav .nav-link');
            
            navLinks.forEach(function(link) {
                if (link.getAttribute('href') === path) {
                    link.parentElement.classList.add('active');
                }
            });
        });
    </script>

    <script src="~/lib/microsoft/signalr/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        connection.on("Kicked", (reason) => {
            alert(`您已被踢出下线，原因：${reason}`);
            window.location.href = '/Logout';
        });

        connection.start().catch(err => console.error(err));
    </script>
</body>
</html>