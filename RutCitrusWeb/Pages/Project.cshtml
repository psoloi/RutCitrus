@page
@model ProjectModel
@{
    ViewData["Title"] = "项目";
}

<div class="container mt-4">
    <!-- 项目进度条 -->
    <div class="project-progress-card mb-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h3 class="mb-0">RutCitrusWeb</h3>
            <span class="progress-percentage">29%</span>
        </div>
        <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: 29%" 
                 aria-valuenow="27" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>

    <!-- Issues 和 Actions 标签页 -->
    <ul class="nav nav-tabs mb-4" id="projectTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="issues-tab" data-bs-toggle="tab" 
                    data-bs-target="#issues" type="button" role="tab">
                <i class="fas fa-exclamation-circle"></i> 问题
                <span class="badge bg-secondary">8</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="actions-tab" data-bs-toggle="tab" 
                    data-bs-target="#actions" type="button" role="tab">
                <i class="fas fa-play-circle"></i> 活动
                <span class="badge bg-success">2 passing</span>
            </button>
        </li>
    </ul>

    <div class="tab-content" id="projectTabsContent">
        <!-- Issues 内容 -->
        <div class="tab-pane fade show active" id="issues" role="tabpanel">
            <div class="issues-list">
                <div class="issue-item">
                    <div class="issue-icon">
                        <i class="fas fa-exclamation-circle text-success"></i>
                    </div>
                    <div class="issue-content">
                        <h5>优化用户界面响应速度</h5>
                        <div class="issue-meta">
                            <span class="badge bg-success">优化</span>
                            <span class="text-muted">#1 创建于 19 天之前</span>
                        </div>
                    </div>
                </div>
                <!-- 添加更多 issues... -->
                <div class="issue-item">
                    <div class="issue-icon">
                        <i class="fas fa-exclamation-circle text-success"></i>
                    </div>
                    <div class="issue-content">
                        <h5>删除暗色主题</h5>
                        <div class="issue-meta">
                            <span class="badge bg-success">修改</span>
                            <span class="text-muted">#1 创建于 1 天之前</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions 内容 -->
        <div class="tab-pane fade" id="actions" role="tabpanel">
            <div class="actions-list">
                <div class="action-item">
                    <div class="action-status">
                        <i class="fas fa-check-circle text-success"></i>
                    </div>
                    <div class="action-content">
                        <h5>构建和测试</h5>
                        <div class="action-meta">
                            <span class="text-success">✓ 成功</span>
                            <span class="text-muted">2 分钟之前</span>
                        </div>
                    </div>
                </div>
                <!-- 添加更多 actions... -->
            </div>
        </div>
    </div>
</div>

<style>
    .project-progress-card {
        background: #fff;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        border: 1px solid #e0e0e0;
    }

    h3 {
        color: #1a1a1a;
        font-weight: 600;
    }

    .progress-percentage {
        color: #2ecc71;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .progress {
        height: 8px;
        background-color: #f5f5f5;
        border-radius: 4px;
        overflow: hidden;
    }

    .progress-bar {
        background: linear-gradient(90deg, #2ecc71, #27ae60);
    }

    .nav-tabs .nav-link {
        color: #666;
        border: none;
        padding: 12px 20px;
        font-weight: 500;
    }

    .nav-tabs .nav-link.active {
        color: #0078D4;
        border-bottom: 2px solid #0078D4;
    }

    .badge {
        font-weight: 500;
        padding: 4px 8px;
    }
</style> 