<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PublishAot>true</PublishAot>
    <InvariantGlobalization>true</InvariantGlobalization>
    <ApplicationIcon>rc.ico</ApplicationIcon>
    <AssemblyVersion>1.2510.26.11</AssemblyVersion>
    <FileVersion>1.2510.26.11</FileVersion>
    <PackageProjectUrl>https://github.com/psoloi/RutCitrus</PackageProjectUrl>
    <Company>RutCitrus</Company>
    <Authors>psoloi</Authors>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="rc.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="OpenTK" Version="4.9.4" />
    <PackageReference Include="RestSharp" Version="112.1.0" />
    <PackageReference Include="Serilog" Version="4.3.0" />
    <PackageReference Include="Spectre.Console" Version="0.52.0" />
    <PackageReference Include="Spectre.Console.Cli" Version="0.52.0" />
    <PackageReference Include="Terminal.Gui" Version="1.19.0" />
    <PackageReference Include="YamlDotNet" Version="16.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Content\Data\" />
    <Folder Include="Content\Extension\" />
    <Folder Include="Modules\Function\" />
  </ItemGroup>

</Project>
